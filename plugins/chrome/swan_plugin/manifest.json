{
  "name": "Swan",
  "description": "Capture current page info onto Swan",
  "version": "0.0.1",
  "permissions": ["cookies","activeTab" , "tabs" , "http://*/*"],
  "background": {
    "scripts": ["background.js", "storage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "plugin_icon_38.png",
    "default_title": "Swan"
  },
  "icons": { "16": "plugin_icon_16.png",
           "48": "plugin_icon_48.png",
          "128": "plugin_icon_128.png" },
  "web_accessible_resources" :["list_tab.png", "edit_btn.png", "collectionstyle.css","edit_btn_over.png"],
